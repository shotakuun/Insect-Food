<% content_for(:title, t('.result')) %>
<div id='before_animation'>
  <div id="load">
      <div class='fontsize1'>す</div>
      <div class='fontsize2'>で</div>
      <div class='fontsize3'>中</div>
      <div class='fontsize4'>断</div>
      <div class='fontsize5'>診</div>
    </div>
  </div>
</div>

<h1 class='text-center mx-4 q-number' id='before_h1'>あなたへのおすすめの虫は...</h1>

<div id="particles-js"></div>
<div class="result-area mb-5 p-3 p-lg-0">
  <div class="mx-auto result-insect-area p-lg-3 rounded text-center">
    <h2 class="mb-3 insect-name texe-center sm-que-title"><%= @result_insect.name %>です！！</h2>
    <%= image_tag @result_insect.insect_img.url, class: 'd-lg-block mx-auto mb-3 pc-result-imag', width: '300' %>
    <%= image_tag @result_insect.insect_img.url, class: 'd-block mx-auto mb-3 d-lg-none', width: '150' %>
      <h3 class="mb-3 p-0 sm-que-title"><%= t('.result')%></h3>
      <div id="star-rate-<%= @result.id %>"></div>
      <div class="eval-star my-3">
        <%= @result.score %>/5点
      </div>

      <h4 class='pc-result-imag text-center p-0'><%= @result.rank_comment %></h4>
      <p class='d-lg-none text-center p-0'><%= @result.rank_comment %></p>

    </div>
    <div class='d-flex w-100 justify-content-center my-3 text-center ml-2 ml-lg-0'>
      <div class="form-footer mr-4 p-0">
        <p><%= link_to t('.insect_show'), insect_path(@result_insect)%></p>
      </div>
      <div class="form-footer p-0">
        <p><%= link_to t(".go_to_toppage"), root_path %></p>
      </div>
      <div class='twitter-button'>
        <%= link_to "https://twitter.com/share?&url=https://insect-food.jp&text=自分へのおすすめの虫は【#{@result_insect.name}】でした！&hashtags=InsectFood,昆虫食,昆虫,ゲテモノ,診断&lang=ja", title: 'Twitter', target: :_blank, rel: 'noopener noreferrer' do %>
          <i class="fab fa-twitter share-button"></i>
        <% end %>
      </div>
    </div>
  </div>
</div>

  <script>
   $('#star-rate-<%= @result.id %>').empty()
    $('#star-rate-<%= @result.id %>').raty({
      size: 36,
      starOff:  '<%= asset_path('star-off.png') %>',
      starOn : '<%= asset_path('star-on.png') %>',
      starHalf: '<%= asset_path('star-half.png') %>',
      readOnly: true,
      score: <%= @result.score %>,
    });
   </script>
